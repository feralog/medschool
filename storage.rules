rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Imagens de questões: leitura pública
    match /questions/{allPaths=**} {
      allow read: if true;
      allow write: if false;  // Apenas via script de migração
    }

    // Arquivos de usuários (futuro: fotos de perfil, etc)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
